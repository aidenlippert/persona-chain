# PersonaChain Enterprise Backend - Production Environment Configuration
NODE_ENV=production
PORT=8080
PERFORMANCE_PORT=8081
SECURITY_PORT=8082
DEPLOYMENT_PORT=8083

# API Configuration
API_BASE_URL=https://personachain-backend.run.app
CORS_ORIGIN=https://personachain-wallet.vercel.app,https://personachain-proxy.aidenlippert.workers.dev

# Blockchain Configuration
BLOCKCHAIN_RPC=https://personachain-proxy.aidenlippert.workers.dev/rpc
BLOCKCHAIN_REST=https://personachain-proxy.aidenlippert.workers.dev/api
BLOCKCHAIN_GRPC=https://personachain-proxy.aidenlippert.workers.dev/grpc
CHAIN_ID=personachain-1
GAS_PRICE=0.025persona

# Database Configuration (Production)
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@${DB_HOST}:5432/personachain
DATABASE_HOST=${DB_HOST}
DATABASE_NAME=personachain
DATABASE_USER=postgres
DATABASE_PASSWORD=${DB_PASSWORD}
DATABASE_PORT=5432
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_CLUSTER=false

# Security Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
ENCRYPTION_KEY=${ENCRYPTION_KEY}
SESSION_SECRET=${SESSION_SECRET}
BCRYPT_ROUNDS=12

# Compliance Configuration
GDPR_ENABLED=true
HIPAA_ENABLED=true
SOX_ENABLED=true
CCPA_ENABLED=true
PCI_DSS_ENABLED=true
ISO27001_ENABLED=true
AUDIT_LOG_RETENTION=2555  # 7 years in days
DATA_RETENTION_DAYS=2555

# Security Features
THREAT_INTELLIGENCE_ENABLED=true
ZERO_TRUST_ENABLED=true
RATE_LIMITING_ENABLED=true
WAF_ENABLED=true
DLP_ENABLED=true
SIEM_ENABLED=true
INTRUSION_DETECTION_ENABLED=true

# Performance Configuration
PERFORMANCE_MONITORING_ENABLED=true
CACHING_ENABLED=true
CACHE_TTL=3600
CACHE_COMPRESSION=true
METRICS_ENABLED=true
TRACING_ENABLED=true

# Monitoring Configuration
LOG_LEVEL=info
LOG_FORMAT=json
STRUCTURED_LOGGING=true
TELEMETRY_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENDPOINT=/metrics
JAEGER_ENDPOINT=${JAEGER_ENDPOINT}
PROMETHEUS_ENDPOINT=${PROMETHEUS_ENDPOINT}

# Email Configuration (for notifications)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_TLS=true
EMAIL_FROM=noreply@personachain.com

# Cloud Storage Configuration
STORAGE_PROVIDER=gcs
GCS_BUCKET=${GCS_BUCKET}
GCS_PROJECT_ID=${GCS_PROJECT_ID}
GCS_KEY_FILE=${GCS_KEY_FILE}

# Webhook Configuration
WEBHOOK_SECRET=${WEBHOOK_SECRET}
WEBHOOK_TIMEOUT=30000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=1000
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Feature Flags
ENABLE_REAL_APIS=true
ENABLE_WEBSOCKETS=true
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true

# Integration Configuration
ENABLE_EXTERNAL_APIS=true
API_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Development/Testing (disabled in production)
MOCK_INTEGRATIONS=false
DEMO_MODE=false
DEBUG_MODE=false
VERBOSE_LOGGING=false