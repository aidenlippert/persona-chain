{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "src/index-cloud.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/database/**",
    "src/deployment/**",
    "src/gateway/**",
    "src/messaging/**",
    "src/monitoring/**",
    "src/orchestration/**",
    "src/performance/**",
    "src/security/**",
    "src/services/**",
    "src/compliance/**"
  ],
  "ts-node": {
    "files": true
  }
}